{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015.promise"],
    "module": "commonjs",
    "outDir": "./lib",
    "removeComments": false,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "types"
  ],
  "include": [
    "src"
  ]
}